# Script to do a rename in WebCore. It's sort of a "one time use" script,
# but we might change it around for other uses later.

use strict;
use FindBin;
use lib $FindBin::Bin;
use webkitdirs;
use File::Find;

setConfiguration();
chdirWebKit();

my %words;

# find all files in WebCore we want to process

my @paths;
find(\&wanted, "WebCore");

sub wanted
{
    my $file = $_;

    if ($file eq "icu") {
        $File::Find::prune = 1;
        return;
    }

    if ($file =~ /^\../) {
        $File::Find::prune = 1;
        return;
    }

    return if $file =~ /^ChangeLog/;
    return if -d $file;

    push @paths, $File::Find::name;
}

# find all symbols ending in Impl

my %renames = (
    "DOMRect" => "JSRect",
    "KHTMLSettings" => "Settings",
    "KSSLKeyGen" => "SSLKeyGenerator",
    "KWQCString" => "DeprecatedCString",
    "KWQComboBox" => "PopUpButton",
    "KWQComboBoxAdapter" => "WebCorePopUpButtonAdapter",
    "KWQEditCommand" => "WebCoreEditCommand",
    "KWQFileButton" => "FileButton",
    "KWQFileButtonAdapter" => "WebCoreFileButtonAdapter",
    "KWQFormData" => "FormDataMac",
    "KWQKHTMLSettings" => "Settings",
    "KWQKSSLKeyGen" => "SSLKeyGenerator",
    "KWQLineEdit" => "TextField",
    "KWQListBox" => "ListBox",
    "KWQListBoxGroupLabel" => "ListBoxGroupLabel",
    "KWQListBoxItem" => "ListBoxItem",
    "KWQListBoxItemType" => "ListBoxItemType",
    "KWQListBoxOption" => "ListBoxOption",
    "KWQListBoxScrollView" => "WebCoreListBoxScrollView",
    "KWQListBoxSeparator" => "ListBoxSeparator",
    "KWQListBoxSeparator" => "ListBoxSeparator",
    "KWQListNode" => "DeprecatedListNode",
    "KWQNSControlSizeForFont" => "ControlSize",
    "KWQNSTextAlignment" => "TextAlignment",
    "KWQPTRQUEUE_H_" => "DeprecatedPtrQueue_h",
    "KWQPageState" => "WebCorePageState",
    "KWQPopUpButton" => "WebCorePopUpButton",
    "KWQPopUpButtonCell" => "WebCorePopUpButtonCell",
    "KWQPtrQueue" => "DeprecatedPtrQueue",
    "KWQRegExpPrivate" => "Private",
    "KWQRelease" => "Release",
    "KWQRetain" => "Retain",
    "KWQSCROLLBAR_H_" => "ScrollBar_h",
    "KWQScrollBar" => "WebCoreScrollBar",
    "KWQScrollDirection" => "ScrollDirection",
    "KWQScrollDocument" => "ScrollByDocument",
    "KWQScrollDown" => "ScrollDown",
    "KWQScrollGranularity" => "ScrollGranularity",
    "KWQScrollLeft" => "ScrollLeft",
    "KWQScrollLine" => "ScrollByLine",
    "KWQScrollPage" => "ScrollByPage",
    "KWQScrollRight" => "ScrollRight",
    "KWQScrollUp" => "ScrollUp",
    "KWQScrollWheel" => "ScrollByWheel",
    "KWQSearchField" => "WebCoreSearchField",
    "KWQSearchFieldCell" => "WebCoreSearchFieldCell",
    "KWQSecureTextField" => "WebCoreSecureTextField",
    "KWQSecureTextFieldCell" => "WebCoreSecureTextFieldCell",
    "KWQSelectingNext" => "SelectingNext",
    "KWQSelectingPrevious" => "SelectingPrevious",
    "KWQSelectionDirection" => "SelectionDirection",
    "KWQSlider" => "WebCoreSlider",
    "KWQStringData" => "DeprecatedStringData",
    "KWQTableView" => "WebCoreTableView",
    "KWQTextEdit" => "TextBox",
    "KWQTextFieldController" => "TextFieldController",
    "KWQTextFieldFormatter" => "WebCoreTextFieldFormatter",
    "KWQTextStream" => "TextStream",
    "KWQValueListPrivate" => "Private",
    "KWQWMatrix" => "AffineTransform",
    "KWQ_LIST_IMPL_H" => "DeprecatedPtrListImpl_h",
    "MouseEventMac" => "PlatformMouseEventMac",
    "Q3CString" => "DeprecatedCString",
    "Q3PtrList" => "DeprecatedPtrList",
    "Q3PtrListIterator" => "DeprecatedPtrListIterator",
    "Q3ValueList" => "DeprecatedValueList",
    "QComboBox" => "PopUpButton",
    "QConstString" => "DeprecatedConstString",
    "QLineEdit" => "TextField",
    "QListBox" => "ListBox",
    "QMatrix" => "AffineTransform",
    "QSTRING_H_" => "DeprecatedString_h",
    "QScrollBar" => "ScrollBar",
    "QSlider" => "Slider",
    "QTextEdit" => "TextBox",
    "QTextStream" => "TextStream",
    "QTextStreamManipulator" => "TextStreamManipulator",
    "QTextStreamSeparator" => "TextStreamSeparator",
    "QWMatrix" => "AffineTransform",
    "RectImpl" => "DOMRect",
    "detachQSlider" => "detachSlider",
    "initWithQSlider" => "initWithSlider",
    "qmatrix" => "matrix",
    "render_button" => "RenderButton",
    "KCanvasContainer" => "RenderSVGContainer",
);

# rename files

my %newFile;
for my $file (sort @paths) {
    my $f = $file;
    $f = "$1$renames{$2}$3" if $f =~ /^(.*\/)(\w+)(\.\w+)$/ && $renames{$2};
    if ($f ne $file) {
        $newFile{$file} = $f;
    }
}

for my $file (sort @paths) {
    if ($newFile{$file}) {
        my $newFile = $newFile{$file};
        print "Renaming $file to $newFile\n";
        system "svn move $file $newFile";
    }
}

# change all file contents

for my $file (sort @paths) {
    $file = $newFile{$file} if $newFile{$file};
    my $contents;
    {
        local $/;
        open FILE, $file or die;
        $contents = <FILE>;
        close FILE;
    }
    my $newContents = $contents;

    for my $from (keys %renames) {
        $newContents =~ s/\b$from(?!["\w])/$renames{$from}/g; # this " unconfuses Xcode syntax highlighting
    }
    $newContents =~ s/_KWQ_/_webcore_/g;

    if ($newContents ne $contents) {
        open FILE, ">", $file or die;
        print FILE $newContents;
        close FILE;
    }
}
