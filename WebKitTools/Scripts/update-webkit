# Update script for Web Kit Open Source Project.

use strict;
use FindBin;
use lib $FindBin::Bin;
use webkitdirs;

chdirWebKit();

# Read the CVS root out of one project that's guaranteed to already be checked out (this one).
open ROOT, "WebKitTools/CVS/Root" or die;
my $root = <ROOT>;
chomp $root;
close ROOT;

my @sources = ("WebKitTools", "JavaScriptCore", "WebCore", "WebKitLibraries", "WebKit");
push @sources, "SVGSupport" if -d "SVGSupport";

# Check out all the sources.
print "CVS root is $root\n";

my $directories = join ", ", @sources;
$directories =~ s/, ([^,]+)$/, and $1/;
print "Updating $directories\n";

open CVS, "cvs -d '$root' co -P @sources |" or die;
while (<CVS>) {
    print;
}
close CVS;
